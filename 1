#include <stdio.h>
#include <string.h>

int isLetter(char ch)
{
    return (ch >= 'a' && ch <= 'z') || (ch >= 'A' && ch <= 'Z');
}

int isDigit(char ch)
{
    return (ch >= '0' && ch <= '9');
}

int isKeyword(char str[])
{
    char *keywords[] = {"int", "if", "while", "return", "float", "char"};
    int i, j, match;

    for (i = 0; i < 6; i++)
    {
        match = 1;
        for (j = 0; str[j] != '\0' || keywords[i][j] != '\0'; j++)
        {
            if (str[j] != keywords[i][j])
            {
                match = 0;
                break;
            }
        }
        if (match)
            return 1;
    }
    return 0;
}

int isValidIdentifier(char str[])
{
    int i;

    if (!(isLetter(str[0]) || str[0] == '_'))
        return 0;

    for (i = 1; str[i] != '\0'; i++)
    {
        if (!(isLetter(str[i]) || isDigit(str[i]) || str[i] == '_'))
            return 0;
    }

    if (isKeyword(str))
        return 0;

    return 1;
}

int main()
{
    char str[100];
    printf("Enter a string: ");
    scanf("%s", str);

    if (isValidIdentifier(str))
        printf("\"%s\" is a valid identifier.\n", str);
    else
        printf("\"%s\" is NOT a valid identifier.\n", str);

    return 0;
}
