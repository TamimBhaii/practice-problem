#include <stdio.h>
#include <string.h>

int main() {
    char code[1000], result[1000];
    int i = 0, j = 0;
    int in_single_comment = 0, in_multi_comment = 0;

    printf("Enter code (Press Ctrl+D or Ctrl+Z to end input):\n");
    while (fgets(code + i, sizeof(code) - i, stdin)) {
        i += strlen(code + i);
    }
    code[i] = '\0'; // Null terminate input string

    for (i = 0; code[i] != '\0'; i++) {
        if (!in_single_comment && !in_multi_comment) {
            // Detect start of single-line comment
            if (code[i] == '/' && code[i + 1] == '/') {
                in_single_comment = 1;
                i++; // Skip next '/'
            }
            // Detect start of multi-line comment
            else if (code[i] == '/' && code[i + 1] == '*') {
                in_multi_comment = 1;
                i++; // Skip next '*'
            }
            else {
                result[j++] = code[i];
            }
        }
        else if (in_single_comment) {
            if (code[i] == '\n') {
                in_single_comment = 0;
                result[j++] = '\n';
            }
        }
        else if (in_multi_comment) {
            if (code[i] == '*' && code[i + 1] == '/') {
                in_multi_comment = 0;
                i++; // Skip '/'
            }
        }
    }
    result[j] = '\0';

    printf("%s", result);

    return 0;
}
