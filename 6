#include<stdio.h>
int main()
{
    char str[100];
    int len = 0, valid = 1;
    printf("Enter a string to check against the regex 'a(a|b)*a': ");
    gets(str);
    
    while(str[len]!='\0')
    {
        len++;
    }
    
    if(len<2 || str[0]!='a' || str[len-1]!='a')
    {
        valid = 0;
    }
    
    else
    {
        for(int i = 1; i<len-1; i++)
        {
            if(str[i]!='a' && str[i]!='b')
            {
                valid = 0;
                break;
            }
        }
    }

    if(valid)
    {
        printf("'%s' MATCHES the regular expression.\n",str);
    }
    else
    {
        printf("'%s' DOES NOT MATCHES the regular expression.\n",str);
    }
    
    
    return 0;
}
